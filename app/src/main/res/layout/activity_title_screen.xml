<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.example.b00189991.draughtsonline.titleScreen"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ddf3fa">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/nameTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:clickable="true"
            android:ems="10"
            android:enabled="true"
            android:gravity="center"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:maxLength="10" />

        <ImageButton
            android:id="@+id/findBTN"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/nameTXT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/findbtn"
            android:clickable="true" />

        <TextView
            android:id="@+id/winsTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/findBTN"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:gravity="center"
            android:text="Wins: 0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lossesTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winsTXT"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Losses: 0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/quitsTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lossesTXT"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Quits: 0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="24dp" />

        <Button
            android:id="@+id/resetBTN"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/button_colored_dark"
            android:text="Reset"
            android:clickable="true" />

        <Button
            android:id="@+id/quitBTN"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/button_colored_dark"
            android:text="Back"
            android:clickable="true" />
    </RelativeLayout>
</LinearLayout>
